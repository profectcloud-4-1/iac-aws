
### SG - RDS ###
resource "aws_security_group" "rds_user" {
  name        = "${var.name_prefix}-rds-user-sg"
  description = "RDS SG for user service database"
  vpc_id      = var.vpc_id

  ingress {
    from_port   = 5432
    to_port     = 5432
    protocol    = "tcp"
    cidr_blocks = [var.vpc_cidr_block]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.name_prefix}-rds-user-sg"
  }
}

